<% content_for :head do %>
  <%= javascript_pack_tag 'users_edit', 'data-turbolinks-track': 'reload', defer: true
  %>
<% end %>
<%= render 'shared/navbar_profile' %>
<section class="block">
  <div class="container">
    <div class="row text-center">
      <div class="col-lg-8 mx-auto">
        <div class="mb-3">
          <%= profile_photo(@user)%>
        </div>
        <h2><%= @user.username%></h2>
        <p id="hidden" hidden><%= @user.eth_address %></p>
        <div class="profile my-5">
          <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa.</p>
        </div>
        <% if @widget.nfts%>
        <% if @nfts %>
          <%# <h3>Digital Assets (NFT's)</h3> %>
          <div id="nfts">
          </div>
        <% end %>
        <% end %>
  <% if @widget.mirror %>
        <% if @mirror %>
          <%# <h3>Writing Entries</h3> %>
          <% @mirror[:url].each_with_index do |element, index| %>
            <a href=<%= element %> class="btn btn-outline-secondary w-100 mb-3" target="_blank"><%= @mirror[:title][index] %></a>
              <br>
            <% end %>
          <% end %>
        <% end %>

  <% if @widget.projects %>

        <%# <div id="projects">
        </div> %>
        <% @user.projects.each do |project|%>
         <a href="<%= project %>" class="btn btn-outline-secondary w-100 mb-3" target="_blank"><%= project[:name] %></a>
        <% end %>
      <% end %>

        <!-- Will display the Social links that the user inputted as part of the Socials form -->
      <hr>
      <div class="social-links d-flex justify-content-center">
        <% if @social.instagram != ""  %>
          <a href="<%=@social.instagram %>">
            <i class="fa-brands fa-instagram fa-2x p-2"></i>
          </a>
        <% end %>
        <% if @social.github != "" %>
          <a href="<%=@social.github %>">
            <i class="fa-brands fa-github fa-2x p-2"></i>
          </a>
        <% end %>
        <% if @social.tiktok != "" %>
          <a href="<%=@social.tiktok %>">
            <i class="fa-brands fa-tiktok fa-2x p-2"></i>
          </a>
        <% end %>
        <% if @social.facebook != "" %>
          <a href="<%=@social.facebook %>">
            <i class="fa-brands fa-facebook fa-2x p-2"></i>
          </a>
        <% end %>
        <% if @social.medium != "" %>
          <a href="<%=@social.medium %>">
            <i class="fa-brands fa-medium fa-2x p-2"></i>
          </a>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</section>
